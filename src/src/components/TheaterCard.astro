---
interface Props {
  id: string;
  name: string;
  role: string;
  tone: string;
  color: string;
  icon: string;
  href?: string;
}

const { id, name, role, tone, color, icon, href = `/theaters/${id}` } = Astro.props;

const colorClasses: Record<string, string> = {
  'theater-assault': 'border-theater-assault hover:bg-theater-assault/10',
  'theater-siege': 'border-theater-siege hover:bg-theater-siege/10',
  'theater-portals': 'border-theater-portals hover:bg-theater-portals/10',
  'theater-air': 'border-theater-air hover:bg-theater-air/10',
};

