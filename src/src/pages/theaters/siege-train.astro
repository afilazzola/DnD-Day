---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TheaterPage from '../../components/TheaterPage.astro';
import theaters from '../../data/theaters.json';

const theater = theaters.theaters.find(t => t.id === 'siege-train');
---

<BaseLayout
  title={theater?.name || 'Siege Train'}
  description={theater?.description || 'Gold Beach - Siege Train theater information.'}
>
  {theater && <TheaterPage theater={theater} />}
</BaseLayout>
